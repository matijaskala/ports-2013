# partylinux prompt theme

prompt_party_help () {
  cat <<'EOF'
This prompt is color-scheme-able.  You can invoke it thus:

  prompt party [<promptcolor> [<usercolor> [<rootcolor>]]]

EOF
}

prompt_party_setup () {
  local prompt_gentoo_prompt=${1:-'blue'}
  local prompt_gentoo_user=${2:-'green'}
  local prompt_gentoo_machine=${3:-'red'}
  local prompt_gentoo_time=${4:-'cyan'}

  if [ "$USER" = 'root' ]
  then
    local base_prompt=""
  else
    local base_prompt="%B%F{$prompt_gentoo_user}%n%k "
  fi
  local post_prompt="%b%f%k"

  #setopt noxtrace localoptions

  local path_prompt="%B%F{$prompt_gentoo_prompt}%1~"
  local machine_prompt="%B%F{$prompt_gentoo_machine}%U%m%u%F{$prompt_gentoo_prompt}:%b%F{$prompt_gentoo_time}%T%f"
  typeset -g PS1="$base_prompt$path_prompt %# $post_prompt"
  typeset -g PS2="$base_prompt$path_prompt %_> $post_prompt"
  typeset -g PS3="$base_prompt$path_prompt ?# $post_prompt"
  typeset -g RPS1="$machine_prompt"
}

prompt_party_setup "$@"
